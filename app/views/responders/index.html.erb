<h1>Listing responders</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Homephone</th>
    <th>Cellphone</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @responders.each do |responder| %>
  <tr>
    <td><%= responder.firstname %></td>
    <td><%= responder.lastname %></td>
    <td><%= responder.email %></td>
    <td><%= responder.homephone %></td>
    <td><%= responder.cellphone %></td>
    <td><%= responder.address %></td>
    <td><%= link_to 'Show', responder %></td>
    <td><%= link_to 'Edit', edit_responder_path(responder) %></td>
    <td><%= link_to 'Destroy', responder, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

